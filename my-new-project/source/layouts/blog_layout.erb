<!DOCTYPE html>

<html>
<%= partial "layouts/shared/head" %>
<body>

  <%= partial "layouts/shared/header" %>
  <main role="main">
    <div class="container">
      <div class="row">
          <div class="col-md-12">
            <h2><%= title %></h2>
            <%= partial("layouts/locations") %>
            <% if !development? %>
            <div class="pull-right">
              <a href="#comments"><span id="cmtcount"></span> Comments</a>
            </div>
            <% end %>
            <%= yield :layout %>

            <% prev_article = current_article.previous_article %>
            <% next_article = current_article.next_article %>
            <ul>
              <% if prev_article %>
                <li>
                  <a href="<%= prev_article.url%>" rel="prev" title="Previous article: <%= prev_article.title%>"> Previous article</a>
                </li>
              <% end %>
              <% if next_article %>
                <li>
                  <a href="<%= next_article.url%>" rel="next" title="Next article: <%= next_article.title%>"> Next article</a>
                </li>
              <% end %>
            </ul>
            <% if !development? %>
              <a href="#comments"><span id="cmtcount"></span> Comments</a>
              <div id="hashover"></div>
              <script type="text/javascript" src="/hashover.php" defer="defer"></script>
            <% end %>
          </div>
      </div>
    </div>
  </main>

  <%= partial "layouts/shared/footer" %>
  <%= partial "layouts/shared/colophon" %>

  <%= javascript_include_tag 'application' %>
  <%= yield_content :bottom %>
</body>
</html>
